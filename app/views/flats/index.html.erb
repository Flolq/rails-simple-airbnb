<h1>All our Flats (<%= @flats.length %>)</h1>
<div class="row">
<% @flats.each do |flat| %>
<div class="card col-md-3">
  <div class="card-body">
    <h5 class="card-title"><%= flat.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
    <p class="card-text"><%= flat.description %></p>
    <div class='d-flex'>
      <div class="d-flex">
        <i class="material-icons me-2">people</i><span><%= flat.number_of_guests %></span>
        </div>
      <div class="d-flex">
        <i class="material-icons me-2">euro_symbol</i><%= flat.price_per_night %>
        </div>
    </div>
    <div>
      <a href="#" class="card-link">Card link</a>
    </div>
  </div>
</div>
<% end %>
</div>
